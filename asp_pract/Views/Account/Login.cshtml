
@model asp_pract.Models.LoginViewModel

<div>
    <h1>Вхід в особистий кабінеи</h1>
    <div class="form-loging-style">
        <form asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="UserName"></label>
                <input asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <br />
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <br />
            <div>
                <label asp-for="RememberMe"></label>
                <input type="checkbox" asp-for="RememberMe" />
                <span asp-validation-for="RememberMe"></span>
            </div>
            <br />
            <div><input type="submit" value="Вхід" /></div>
        </form>
    </div>
</div>

